{
  "name": "black-box-ai-monitoring",
  "version": "1.0.0",
  "description": "AI 4-Layer Architecture System Monitoring Platform",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "tsx server.js",
    "dev": "tsx --watch server.js",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "build": "echo 'No build step required for Railway'",
    "preview": "wrangler pages dev",
    "deploy:cloudflare": "npm run build && wrangler pages deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.1",
    "hono": "^4.9.6",
    "tsx": "^4.20.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@hono/vite-dev-server": "^0.18.2",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  },
  "keywords": [
    "ai",
    "monitoring",
    "4-layer-architecture",
    "blackbox",
    "llm",
    "anomaly-detection",
    "governance",
    "hono",
    "railway"
  ],
  "author": "AI Monitoring Team",
  "license": "MIT"
}
